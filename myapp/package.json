{
  "name": "my-smart-home",
  "version": "1.0.0",
  "description": "An application to manage all your home devices",
  "main": "src/server.js",
  "scripts": {
    "test": "jest",
    "start": "nodemon src/server.js",
    "local": "./node_modules/.bin/env-cmd -f ./.env.local nodemon --inspect src/server.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "rest",
    "api",
    "sequelize",
    "mysql"
  ],
  "author": "Javier Galindo",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mysql2": "^2.0.2",
    "nodemon": "^2.0.16",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint": "^8.15.0",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "supertest": "^6.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "npm run test",
      "git add"
    ]
  }
}
