{
    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon local",
            "program": "${workspaceFolder}/src/server.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "envFile": "${workspaceFolder}/.env.local",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}